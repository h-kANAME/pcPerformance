<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Razer Color Palette -->
    <Color x:Key="RazerGreen">#44D62C</Color>
    <Color x:Key="RazerGreenGlow">#66FF66</Color>
    <Color x:Key="RazerBlack">#0D0D0D</Color>
    <Color x:Key="RazerDarkGray">#1A1A1A</Color>
    <Color x:Key="RazerMediumGray">#2D2D2D</Color>
    <Color x:Key="RazerLightGray">#3D3D3D</Color>
    <Color x:Key="RazerTextPrimary">#E8E8E8</Color>
    <Color x:Key="RazerTextSecondary">#A0A0A0</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="RazerGreenBrush" Color="{StaticResource RazerGreen}" />
    <SolidColorBrush x:Key="RazerGreenGlowBrush" Color="{StaticResource RazerGreenGlow}" />
    <SolidColorBrush x:Key="RazerBlackBrush" Color="{StaticResource RazerBlack}" />
    <SolidColorBrush x:Key="RazerDarkGrayBrush" Color="{StaticResource RazerDarkGray}" />
    <SolidColorBrush x:Key="RazerMediumGrayBrush" Color="{StaticResource RazerMediumGray}" />
    <SolidColorBrush x:Key="RazerLightGrayBrush" Color="{StaticResource RazerLightGray}" />
    <SolidColorBrush x:Key="RazerTextPrimaryBrush" Color="{StaticResource RazerTextPrimary}" />
    <SolidColorBrush x:Key="RazerTextSecondaryBrush" Color="{StaticResource RazerTextSecondary}" />
    
    <!-- Accent Brush -->
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource RazerGreen}" />
    <SolidColorBrush x:Key="AccentHighlightBrush" Color="{StaticResource RazerGreenGlow}" />

</ResourceDictionary>
