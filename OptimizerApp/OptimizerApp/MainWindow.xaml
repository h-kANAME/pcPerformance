<Window x:Class="OptimizerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:OptimizerApp.Views"
        mc:Ignorable="d"
        Title="PC Performance Optimizer - By KYZ" Height="700" Width="1100"
        Icon="Assets/AppIcon.png"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource RazerBlackBrush}"
        Foreground="{StaticResource RazerTextPrimaryBrush}">
    <Grid Background="{StaticResource RazerBlackBrush}">
        <TabControl Background="{StaticResource RazerBlackBrush}" Foreground="{StaticResource RazerTextPrimaryBrush}">
            <TabItem Header="Recursos">
                <views:DiagnosticsView DataContext="{Binding Diagnostics}" />
            </TabItem>
            <TabItem Header="Procesos">
                <views:PrePlayOptimizationView DataContext="{Binding PrePlayOptimization}" />
            </TabItem>
            <TabItem Header="Memoria">
                <views:MemoryCleanupView DataContext="{Binding MemoryCleanup}" />
            </TabItem>
            <TabItem Header="Disco">
                <views:DiskOptimizationView DataContext="{Binding DiskOptimization}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
